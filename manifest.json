{
  "manifest_version": 2,
  "name": "Movie Search",
  "description": "Right click to search for a movie on IMDb, Trakt, or Letterboxd.",
  "version": "0.0.1",
  "icons": {
    "64": "icons/icon.png"
  },
  "permissions": ["contextMenus", "activeTab"],
  "background": {
    "scripts": ["background_script.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*.mozilla.org/*"],
      "js": ["content_script.js"]
    }
  ],
  "browser_action": {
    "default_icon": {
      "64": "icons/icon.png"
    },
    "default_popup": "browserAction/index.html",
    "default_title": "Search IMDb, Trakt, Letterboxd"
  },
  "page_action": {
    "default_icon": {
      "64": "icons/icon.png"
    },
    "default_popup": "pageAction/index.html",
    "default_title": "Search IMDb, Trakt, Letterboxd"
  },
  "options_ui": {
    "page": "options/index.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "movie-search@yourdomain.com",
      "strict_min_version": "64.0"
    }
  }
}
